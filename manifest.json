{
  "manifest_version": 3,
  "name": "DisappointedMage Firefox Toolbar",
  "description": "Firefox DevTools extension for Magento debugging. Works with MSP_DevTools module.",
  "version": "1.0.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "disappointedmage-toolbar@disappointed.mage",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "images/icon16x16.png",
    "48": "images/icon48x48.png",
    "128": "images/icon128x128.png"
  },
  "action": {
    "default_icon": "images/icon_off.png",
    "default_title": "DisappointedMage Firefox Toolbar",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "scripts": [
      "js/browser-polyfill.min.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/browser-polyfill.min.js",
        "js/jquery.js",
        "js/content.js"
      ]
    }
  ],
  "devtools_page": "devtools.html"
}
